# Elvarin X Music Bot Configuration
# Copy this file to .env and fill in your actual values

# Get these from https://my.telegram.org/apps
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Get this from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# MongoDB Database URI
MONGO_DB_URI=mongodb://localhost:27017/ElvarinXMusic

# Bot Name
MUSIC_BOT_NAME=Elvarin X Music

# Private Bot Mode (True/False)
PRIVATE_BOT_MODE=False

# Duration Limit in minutes
DURATION_LIMIT=900

# Logger Group ID (for bot logs)
LOGGER_ID=your_logger_group_id

# Owner ID (your Telegram user ID)
OWNER_ID=your_owner_id

# Sudo Users (comma separated user IDs)
SUDO_USERS=your_owner_id

# String Sessions (get from @StringSessionGeneratorBot)
STRING1=your_string_session_1
STRING2=your_string_session_2
STRING3=your_string_session_3
STRING4=your_string_session_4
STRING5=your_string_session_5

# Heroku Configuration (if deploying on Heroku)
HEROKU_APP_NAME=your_heroku_app_name
HEROKU_API_KEY=your_heroku_api_key

# GitHub Token (for updates)
GITHUB_TOKEN=your_github_token

# Support Links
SUPPORT_CHANNEL=https://t.me/your_channel
SUPPORT_CHAT=https://t.me/your_group